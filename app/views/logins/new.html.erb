<%= render 'shared/page_title', title: 'Login'%>

<div class="row">
        <div class="well col-md-6 col-md-offset-3">
<%= form_tag '/login' do %>
    
    <%= label_tag :email %>
    <%= text_field_tag :email %>
    
    <%= label_tag :password %>
    <%= password_field_tag :password %>
    
    <%= submit_tag 'Login', class: 'btn btn-success' %></br>
<%= link_to "Not a user? Sign up here", register_path, class:'btn btn-primary'%>    
<% end %>
        </div>

</div>