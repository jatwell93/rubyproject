
<nav class="breadcrumb">
  <a class="breadcrumb-item" <%= link_to 'Home/', root_path%></a>
  <span class="breadcrumb-item active">User List</span>
</nav>
<%= render 'shared/page_title', title: 'All Users'%>

<ul class="nav nav-tabs">
    <li>
        <%= link_to "Recipes", recipes_path %>
    </li>
    <li class="active">
        <%= link_to "Users", users_path %>
    </li>
</ul>
<div class ="row">
    <div class="col-md-4 col-md-offset-4 center">
        <%= will_paginate %>
    </div>
</div>

<% @users.each do |user| %>
<div class ="row">
    <div class="col-md-4 col-md-offset-4 center">
        <%= link_to gravatar_for(user, size: 200), user_path(user) %>
        <p>
            <h5>User Name: <%= user.first_name %></h5>
        </p>
        <hr>
        <br>
    </div>
</div>    

<% end %>