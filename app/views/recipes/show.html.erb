<div class="containter">
<nav class="breadcrumb">
  <a class="breadcrumb-item" <%= link_to 'Home/', root_path%></a>
  <a class="breadcrumb-item" <%= link_to 'Recipe List/', recipes_path%></a>
  <span class="breadcrumb-item active">Recipe</span>
</nav>
</div>
<%= render 'shared/page_title', title: @recipe.name %>
<div class="container">

    <div class="col-md-8 col-lg-10 col-xlg-12">
            
    <div class="col-md-4 pull-right">
        <%= link_to gravatar_for(@recipe.chef, size: 200), chef_path(@recipe.chef) %>
        <p>
            <h5>Brought to you from: <%= @recipe.chef.chefname%></h5>
        </p>
    </div>
        <h3><%= @recipe.summary %></h3>
        <div class="show_recipe">
            <%= image_tag(@recipe.picture.url,class: "uploaded") if @recipe.picture? %>
        </div>
            <div class ="well">
             <p>Styles: <%= render @recipe.styles %></p>
             <p>Ingredients: <%= render @recipe.ingredients %></p>
                <p>
                    <strong>Steps:</strong>
                </p>
                <p>
                    <%= simple_format(@recipe.description) %>
                    <div class="pull-right">
                        <%= link_to like_recipe_path(@recipe, like: true), method: :post do %>
                            <i class="glyphicon glyphicon-thumbs-up"></i> &nbsp <%= @recipe.thumbs_up_total %>
                        <% end %> &nbsp&nbsp&nbsp&nbsp
                         <%= link_to like_recipe_path(@recipe, like: false), method: :post do %>
                            <i class="glyphicon glyphicon-thumbs-down"></i> &nbsp <%= @recipe.thumbs_down_total %>
                        <% end %>
                    </div>
                </p>
            </div>
            <% if logged_in? and @recipe.chef == current_user %>
        <%= link_to "Edit this recipe", edit_recipe_path(@recipe), class: "btn btn-primary pull-right"%>
            <% end %>
    </div>
</div>

<h5><%= link_to 'Return to recipe listing', recipes_path, class: "btn btn-warning btn-small"%></h5>
</div>